.guide {
  display: flex;
  align-items: center;
  padding: 30rpx;
}
.guide .l {
  flex: 1;
}
.guide .l .t,
.guide .r {
  font-size: 30rpx;
}
.guide .l .c {
  line-height: 1.8em;
  color: #666;
}
.guide .r {
  font-size: 32rpx;
  color: #3281ff;
}
.btitle {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  padding: 0 30rpx;
  color: #3281ff;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
}
.btitle .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}
.btitle .l {
  display: flex;
  align-items: center;
}
.btitle .r .refresh {
  width: 32rpx;
  height: 22rpx;
}
.btitle .r .close {
  width: 20rpx;
  height: 20rpx;
  margin-left: 40rpx;
}