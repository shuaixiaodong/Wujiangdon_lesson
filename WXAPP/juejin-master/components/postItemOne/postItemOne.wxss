.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1px solid #efefef;
  padding: 0 30rpx;
  background: #fff;
}
.item .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  height: 215rpx;
  padding: 20rpx 20rpx 10rpx 0;
  box-sizing: border-box;
}
.graphics.item .content {
  height: 160rpx;
}
.item .img {
  display: flex;
  justify-content: center;
  align-items: center;
}
.item .inset {
  width: 100rpx;
  height: 100rpx;
}
.content .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.labels {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #abb4bf;
  margin-right: 20rpx;
}
.labels .label {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #abb4bf;
  margin-right: 20rpx;
}
.label image {
  width: 30rpx;
  height: 30rpx;
}
.hover-class,
.navigator-hover {
  background: #f2f2f2 !important;
}